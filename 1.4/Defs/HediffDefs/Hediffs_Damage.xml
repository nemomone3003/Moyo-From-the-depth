<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>HexapodConstriction</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>constriction</label>
		<description>Constricted by hexapod's tentacle interfereing with the victim's movements.</description>
		<defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
		<descriptionHyperlinks>
			<ThingDef>MoyoHexaPod_Race</ThingDef>
			<ThingDef>MoyoCryoPod_Race</ThingDef>
		</descriptionHyperlinks>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-30</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef>
		<defName>Moyo_CryoSlowdown</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>cryonic hypothermia</label>
		<description>A sudden drop of body temperature casued by cryoweapon. The body will soon return to normal state. However, this will lead to death if it gets too severe.</description>
		<defaultLabelColor>(56,144,210)</defaultLabelColor>
		<lethalSeverity>1</lethalSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-8</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>shivering</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>shivering</label>
				<minSeverity>0.04</minSeverity>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.08</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.45</minSeverity>
				<painOffset>0.15</painOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.20</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.75</minSeverity>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.30</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>	
</Defs>

