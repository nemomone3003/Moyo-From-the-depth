	<!-- morphi-blue -->	
	<ThingDef ParentName="Moyo_DrugPillBase">
		<defName>BlueGo</defName>
		<label>morphi-blue</label>
		<description>A cocktail of deepblue and a drug. Causes deepblue dependancy when used and provides effect of Go-juice. Is's faster to use and the effect last a bit longer.\n\nDeepblue cocktail does not have dangers of addiction or overdose of used drug.</description>
		<descriptionHyperlinks>
			<HediffDef>BlueGoHigh</HediffDef>		
			<HediffDef>DeepBlues</HediffDef>
		</descriptionHyperlinks>				
		<graphicData>
			<texPath>Things/Drugs/BlueGo</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<rotatable>false</rotatable>
		<statBases>
			<MarketValue>72</MarketValue>
			<Mass>0.05</Mass>
		</statBases>
		<costList>
			<AbyssSerum>1</AbyssSerum>
			<GoJuice>2</GoJuice>
		</costList>
		<ingestible>
			<drugCategory>Hard</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_OffsetNeed">
					<need>Rest</need>
					<offset>0.35</offset>
				</li>			
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>DeepBlues</hediffDef>
					<severity>1.00</severity>
				</li>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>DeepBlueTolerance</hediffDef>
					<severity>0.34</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>BlueGoHigh</hediffDef>
					<severity>0.8</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
				<li Class="IngestionOutcomeDoer_OffsetPsyfocus">
					<offset>0.15</offset>
				</li>				
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Drug">
				<chemical>DeepBlue</chemical>
				<addictiveness>1.00</addictiveness>
				<needLevelOffset>0.3</needLevelOffset>
				<isCombatEnhancingDrug>true</isCombatEnhancingDrug>
				<listOrder>1012</listOrder>
			</li>
		</comps>
		<thingSetMakerTags>
			<li>RewardStandardHighFreq</li>
		</thingSetMakerTags>
	</ThingDef>

	<!--morphi-blue high -->
	<HediffDef>
		<defName>BlueGoHigh</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>high on morphi-blue</label>
		<labelNoun>a morphi-blue high</labelNoun>
		<description>Go-juice infused with deepblue runs through the bloodstream inhancing combat abilities. This effect does not stack with Go-juice.</description>
		<descriptionHyperlinks>
			<ThingDef>BlueGo</ThingDef>
		</descriptionHyperlinks>				
		<defaultLabelColor>(55,255,165)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.40</severityPerDay>
			</li>
			<li Class="MoharHediffsNE.HediffCompProperties_HediffNullifier">
				<hediffToNullify>
					<li>GoJuiceHigh</li>
				</hediffToNullify>	
			</li>
		</comps>
		<stages>
			<li>
				<painFactor>0.2</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.15</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.30</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.45</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

